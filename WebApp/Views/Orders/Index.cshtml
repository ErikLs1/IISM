@model WebApp.Models.Index.OrderIndexViewModel


@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Orders.First().OrderShippingAddress))
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders.First().OrderStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders.First().OrderTotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders.First().Person)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Orders) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderShippingAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderTotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person!.PersonAddress)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
