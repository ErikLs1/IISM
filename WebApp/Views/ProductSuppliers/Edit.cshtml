@model WebApp.Models.Index.MvcDto.ProductSupplierMvcDto



@{
    ViewData["Title"] = "Edit";
}

<h1>@Base.Resources.Common.EditLink</h1>

<h4>@Base.Resources.Common.ProdcutSupplier</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SupplierId"></label>
                <select asp-for="SupplierId"
                        asp-items="ViewBag.SupplierId"
                        class="form-control">
                    <option value="">– Choose Supplier –</option>
                </select>
                <span asp-validation-for="SupplierId"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProductId"></label>
                <select asp-for="ProductId"
                        asp-items="ViewBag.ProductId"
                        class="form-control">
                    <option value="">– Choose Product –</option>
                </select>
                <span asp-validation-for="ProductId"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitCost" class="control-label"></label>
                <input asp-for="UnitCost" class="form-control" />
                <span asp-validation-for="UnitCost" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="@Base.Resources.Common.SaveButton" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Base.Resources.Common.BackToList</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
