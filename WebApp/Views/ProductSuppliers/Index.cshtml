@model WebApp.Models.Index.ViewModel.ProductSupplierViewModel


@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductSuppliers.First().UnitCost))
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductSuppliers.First().Supplier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductSuppliers.First().Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ProductSuppliers) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UnitCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier!.SupplierName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product!.ProductName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
