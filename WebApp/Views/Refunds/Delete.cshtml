@model App.Domain.Refund

@{
    ViewData["Title"] = "Delete";
}

<h1>@Base.Resources.Common.DeleteLink</h1>

<h3>@Base.Resources.Common.DeleteMessage</h3>
<div>
    <h4>@Base.Resources.Common.Refund</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RefundAmount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RefundAmount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RefundReason)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RefundReason)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RefundStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RefundStatus)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderProduct)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderProduct!.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@Base.Resources.Common.DeleteButton" class="btn btn-danger" /> |
        <a asp-action="Index">@Base.Resources.Common.BackToList</a>
    </form>
</div>
