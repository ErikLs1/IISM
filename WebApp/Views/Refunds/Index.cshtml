@model WebApp.Models.Index.RefundIndexViewModel


@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Refunds.First().RefundAmount))
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Refunds.First().RefundReason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Refunds.First().RefundStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Refunds.First().OrderProduct)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Refunds) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RefundAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefundReason)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefundStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderProduct!.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
