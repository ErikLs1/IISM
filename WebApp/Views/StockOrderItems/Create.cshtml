@model WebApp.Models.Index.MvcDto.StockOrderItemMvcDto



@{
    ViewData["Title"] = "Create";
}

<h1>@Base.Resources.Common.CreateButton</h1>

<h4>@Base.Resources.Common.StockOrderItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StockOrderId" class="control-label"></label>
                <select asp-for="StockOrderId"
                        asp-items="ViewBag.StockOrderId"
                        class="form-control">
                    <option value="">– Choose Stock Order –</option>
                </select>
                <span asp-validation-for="StockOrderId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId"
                        asp-items="ViewBag.ProductId"
                        class="form-control">
                    <option value="">– Choose Product –</option>
                </select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Base.Resources.Common.CreateButton" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Base.Resources.Common.BackToList</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
